{
  "name": "<%= name %>",
  "version": "<%= version %>",
  "description": "<%= description %>",
  "main": "dist/main.js",
  "author": {
    "name": "<%= authorName %>",
    "email": "<%= authorEmail %>",
    "url": ""
  },
  "repository": {
    "type": "git",
    "url": "<%= repo %>"
  },
  "license": "<%= license %>",
  "scripts": {
    "start": "npm run dev",
    "dev": "PORT=8080; webpack-dev-server --progress --config .config/webpack.dev.config.js --hot --inline --host 127.0.0.1 --port $PORT",
    "build": "NODE_ENV=production npm run clean && npm run lint && node .config/rollup.config.js",
    "lint": "eslint --ext .js,.vue src .config .script test/*_test.js",
    "test": "npm run build && nyc ava ./test/*_test.js",
    "clean": "rm -rf dist .nyc_output coverage; mkdir dist",
    "prepublish": "npm run build"
  },
  "config": {
    "ghooks": {
      "pre-commit": "NODE_ENV=production node .script/checkVersion.js && npm run lint && npm run test"
    }
  },
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "ava": "^0.17.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.8",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-2": "^6.18.0",
    "babel-runtime": "^6.18.0",
    "browser-env": "^2.0.16",
    "css-loader": "^0.26.0",
    "eslint": "^3.11.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-friendly-formatter": "^2.0.6",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-html": "^1.7.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "ghooks": "^1.3.2",
    "jsdoc": "^3.4.3",
    "jsdoc-webpack-plugin": "0.0.1",
    "latest": "^0.2.0",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "nyc": "^10.0.0",
    "postcss": "^5.2.6",
    "postcss-loader": "^1.1.1",
    "rollup": "^0.36.4",
    "rollup-loader": "^0.0.2",
    "rollup-plugin-buble": "^0.14.0",
    "rollup-plugin-less": "^0.1.1",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-plugin-vue": "^2.2.10",
    "style-loader": "^0.13.1",
    "webpack": "^2.1.0-beta.25",
    "webpack-dev-server": "^2.1.0-beta.0",
    "webpack-merge": "^1.0.2",
    "webpack-notifier": "^1.4.1"
  }
}
